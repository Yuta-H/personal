.modal-dialog
  .modal-content
    .modal-body
      %table.table.table-hover
        %colgroup
          %col{style: 'width: 50%;'}
          %col{style: 'width: 40%;'}
          %col{style: 'width: 10%;'}
        %thead
          %tr
            %th
            %th
        %tbody
          %h3 ステータス 削除
          - @statuses.order(classification: :desc).each do |status|
            %tr
              %td= status.classification == Constants::TASKS_CLASSIFICATION ? "タスク" : "トラブル"
              %td= status.name
              %td= link_to '', status_path(status.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash'
