.modal-dialog
  .modal-content
    .modal-body
      %table
        %colgroup
          %col{style: 'width: 70%;'}
          %col{style: 'width: 30%;'}
        %thead
          %tr
            %th
            %th
        %tbody
          - @statuses.each do |status|
            %tr
              %td= status.name
              %td= link_to '削除', status_path(status.id), method: :delete, data: { confirm: 'Are you sure?' }
