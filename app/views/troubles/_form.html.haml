.field.form-group
  = form.label '内容'
  .div
    - if @variable_trouble.new_record?
      = form.text_field :name, class: 'form-control'
    - else
      = form.text_field :name, class: 'form-control', required: true
.field.form-group
  = form.label '状態'
  .div
    = form.collection_select :status_id, Status.branch_troubles, :id, :name, {}, {class: "form-control"}
.field.form-group
  = form.label 'カテゴリ'
  .div
    = form.collection_select :category_id, Category.branch_troubles, :id, :name, {}, {class: "form-control"}
.field.form-group
  = form.label '解決策'
  .div
    = form.text_field :solution, class: 'form-control'
.field.form-group
  = form.label '参考記事'
  .div
    = form.url_field :url, class: 'form-control'
.field.form-group
  %br
    = form.submit class: "btn btn-success"