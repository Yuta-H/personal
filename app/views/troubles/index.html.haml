.container
  = form_for @variable_trouble, url: troubles_url, method: :post, html: {class: "form-inline"} do |form|
    = render partial: 'form', locals: { form: form }

.container
  %h2.col-6{style: 'height: 10vmin;'} トラブル管理
.container{style: 'height: 15vmin;'}
  = search_form_for @search, url: troubles_url, html: {class: "form-inline"} do |f|
    .row.text-center
      = f.label :category, "カテゴリ検索"
      .div
        .col-md-2.col-md-offset-5
          .form-group
            = f.collection_select :category_id_eq, Category.branch_troubles, :id, :name , {}, {class: "form-control"}
            = button_tag "検索", {class: 'btn btn-primary'}
.container{style: 'height: 20vmin;'}
  %table.table.table-hover
    %colgroup
      %col{style: 'width: 14%;'}
      %col{style: 'width: 30%;'}
      %col{style: 'width: 30%;'}
      %col{style: 'width: 8%;'}
      %col{style: 'width: 8%;'}
    %thead
      %tr
        %th カテゴリ
        %th 課題名
        %th 状態
        %th{:colspan => "3"}
    %tbody
      - @troubles.each do |trouble|
        %tr
          %td= trouble.category.name
          %td= trouble.name
          %td= trouble.status.name
          %td= link_to '編集', edit_task_path(trouble), remote: true, class: 'glyphicon glyphicon-pencil'
          %td= link_to '削除', trouble, method: :delete, data: { confirm: 'Are you sure?' }, class: 'glyphicon glyphicon-trash'